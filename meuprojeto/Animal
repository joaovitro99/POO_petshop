package com.meuprojeto;
package com.meuPetshop;

public class Animal {
	private String nome;
	private String especie;
	private int idade;
	
	public Animal(String nome, String especie, int idade) {
		this.nome = nome;
		this.especie = especie;
		this.idade = idade;
	}
	
	public String toString() {
		return "o nome dele Ã© "+this.nome+", a especie e "+this.idade+"e a idade e"+this.idade;
	}

	public static Animal fromString(String linha) {
    	String[] partes = linha.split(",");
    	return new Animal(partes[0],partes[1],Integer.parseInt(partes[2]));
    	}
	
	private String getNome() {
		return this.nome;
	}
	private String getEspecie() {
		return this.especie;
	}
	private int getIdade() {
		return this.idade;
	}
	
	private void setNome(String nome) {
		this.nome = nome;
	}
	private void setEspecie(String especie) {
		this.especie = especie;
	}
	private void setIdade(int idade) {
		this.idade = idade;
	}
	
	
}
